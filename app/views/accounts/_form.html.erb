<%= form_for @account do |f| %>
  
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-group">
  	<%= f.label :date_of_birth %>
  	<%= f.date_select :date_of_birth, :start_year=> 1900, :order=> [:month, :day, :year] %>
  </div>

  <div class="form-group">
  	<%= f.label :city %>
  	<%= f.text_field :city %>
  </div>

  <div class="form-group">
  	<%= f.label :country %>
  	<%= f.text_field :country %>
  </div>


  <div class="form-group">
  	<%= f.label :zipcode %>
  	<%= f.text_field :zipcode %>
  </div>


  <div class="form-group">
  	<% f.label :new_arrival %>Are you new to this area? 
  	<%= f.select :new_arrival, [['Yes', true], ['No', false]] %>
  </div>

  <div class="form-group">
  	<p>Tell a bit about yourself and why you are interested in joining (at least 100 characters)</p>
  	<% f.label :story %>
  	<%= f.text_area :story, size: "100x5"%>
  </div>


  <div class="form-group">
  	<%= f.submit "Submit!", class: "btn btn-primary"%>
  </div>

 <% end %>